<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/red</item>
    </style>
    <style name="VideoChatTheme" parent="AppTheme">
        <item name="colorAccent">@color/color_blue_accent</item>
        <item name="colorControlActivated">@color/color_blue_accent</item>
        <item name="colorControlHighlight">@color/color_blue_accent</item>
        <item name="colorControlNormal">@color/color_blue_accent</item>
    </style>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowActionBar">false</item>-->
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>

        <item name="android:windowBackground">@color/red</item>
    </style>

    <style name="AppTheme.BlueAccent">
        <item name="colorAccent">@color/color_blue_accent</item>
    </style>

    <style name="ListItemIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/list_item_side_margin</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="DialogNameStyle" parent="AppTheme">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CallerAvatar">
        <item name="android:layout_width">@dimen/call_avatar_diameter</item>
        <item name="android:layout_height">@dimen/call_avatar_diameter</item>
        <item name="android:padding">24dp</item>
        <item name="android:src">@drawable/ic_person_big</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="RoundedImageButton">
        <item name="android:layout_width">@dimen/call_buttons_diameter</item>
        <item name="android:layout_height">@dimen/call_buttons_diameter</item>
        <item name="android:padding">@dimen/call_buttons_padding</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="EndCallImageButton" parent="RoundedImageButton">
        <item name="android:background">@drawable/selector_call_end</item>
        <item name="android:src">@drawable/ic_phone_hangup</item>
    </style>

    <style name="TakeCallImageButton" parent="RoundedImageButton">
        <item name="android:background">@drawable/selector_call_take</item>
    </style>

    <style name="ToolbarStyleCall" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>


    <style name="SeekBarPreferenceTitle" parent="AppTheme">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    /********************** a7a styles   *****************/
    <style name="FabStyle" parent="WrapContent">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_bottom</item>
        <item name="android:layout_marginRight">@dimen/fab_margin_right</item>
        <item name="android:layout_gravity">right|bottom</item>
    </style>

    <style name="ListViewWithoutDividerStyle" parent="MatchParent">
        <item name="android:divider">@null</item>
    </style>

    <style name="BorderlessImageButtonStyle" parent="WrapContent">
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/padding_common</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="CenterProgressBarStyle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="SplashAppVersionStyle" parent="WrapContent">
        <item name="android:textColor">@color/text_color_light_grey</item>
        <item name="android:textSize">@dimen/splash_version_text_size</item>
        <item name="typeface">roboto_light</item>
    </style>

    <style name="SplashLogoStyle" parent="WrapContent">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/qb_logo</item>
    </style>

    <style name="SplashAppTitleStyle" parent="WrapContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="typeface">roboto_light</item>
    </style>
    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WeightWidth">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="WeightHeight">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>